{% extends "@App/base.html.twig" %}

{% form_theme form '@App/form/order.html.twig' %}

{% block body %}
<div class="container container--full-height">

  {% if not order.empty %}

    {% include '@App/order/breadcrumb.html.twig' %}

    <div class="order-map__wrapper">
      {{ form_start(form) }}
      <div class="row">
        <div class="col-xs-12">
          {% include '@App/order/_partials/time.html.twig' %}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="order-map__column">

            <h4>{{ order.restaurant.name }}</h4>
            <div class="order-map__column-block">
              {% include "@App/_partials/order/restaurant_details.html.twig" %}
            </div>

            <h4>{{ 'order.cart.title'|trans }}</h4>
            <div class="order-map__column-block" id="items">
              {% include '@App/_partials/order/items.html.twig' with { with_taxes: false } %}
              {#
              {% if order.restaurant.isLoopeatEnabled() and not loopeat_valid %}
              <div class="alert alert-warning">
                {% trans from 'validators' %}loopeat.insufficient_balance{% endtrans %}
              </div>
              {% endif %}
              #}
              {% if form.reusablePackagingEnabled is defined %}
              <div class="alert alert-info py-0">
                {{ form_widget(form.reusablePackagingEnabled) }}
              </div>
              {% endif %}
              {% if form.loopeatRefill is defined %}
              {# <div class="alert alert-warning py-0">
                {{ form_widget(form.loopeatRefill, { attr: { class: 'btn btn-sm btn-warning' } }) }}
              </div> #}
              {{ form_widget(form.loopeatRefill) }}
              {% endif %}
            </div>

            <div class="order-map__column-block">
              {{ form_row(form.promotionCoupon) }}
              {# We use an input group with the button #}
              {# {{ form_row(form.addPromotion) }} #}
            </div>

            <div class="order-map__column-block">
              {{ form_row(form.tipAmount) }}
              {# We use an input group with the button #}
              {# {{ form_row(form.addPromotion) }} #}
            </div>

          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="order-map__column">

            <h4>{% trans %}cart.widget.title{% endtrans %}</h4>
            <div class="order-map__column-block">
              {% if form.telephone is defined %}
                {{ form_row(form.telephone) }}
              {% endif %}
              {{ form_row(form.shippingAddress.streetAddress) }}
              {{ form_row(form.shippingAddress.floor) }}
              <div class="row">
                <div class="col-md-4">
                  {{ form_row(form.shippingAddress.postalCode) }}
                </div>
                <div class="col-md-8">
                  {{ form_row(form.shippingAddress.addressLocality) }}
                </div>
              </div>
              {{ form_row(form.shippingAddress.description) }}
              <hr>
              {{ form_row(form.notes) }}

              <div class="text-center">
                <button class="btn btn-block btn-lg btn-primary" type="submit">{% trans %}cart.widget.button{% endtrans %}</button>
                {% if form.quote is defined %}
                  {{ form_widget(form.quote, { attr: { class: 'btn-block btn-lg btn-default' } }) }}
                {% endif %}
              </div>
            </div>

          </div>
        </div>
      </div>
      {{ form_end(form) }}

      <div id="map" class="order-map hidden-xs hidden-sm"></div>
    </div>

    <div class="modal fade" id="modal-loopeat" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-body mb-0 p-0">
            <div class="embed-responsive embed-responsive-16by9 z-depth-1-half">
              <iframe class="embed-responsive-item" allowfullscreen></iframe>
            </div>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-outline-primary btn-rounded btn-md ml-4" data-dismiss="modal">{{ 'basics.close'|trans }}</button>
          </div>
        </div>
      </div>
    </div>

  {% else %}
    <div class="alert alert-warning">
      {% trans from 'validators' %}cart.empty{% endtrans %}
    </div>
  {% endif %}
</div>
{% endblock %}

{% block scripts %}
{% if not order.empty %}
{{ encore_entry_script_tags('delivery-map') }}
<script>
(function () {

  var loopeatIframe = document.querySelector('#modal-loopeat iframe');
  var preventUncheck = false;

  function onMessage(e) {
    if (e.source === loopeatIframe.contentWindow) {
      var messageData = JSON.parse(e.data)
      if (messageData && messageData.loopeat) {
        if (messageData.loopeat.success) {
          preventUncheck = true;
          $('#modal-loopeat').modal('hide');

          $('#checkout_address_reusablePackagingEnabled').prop('checked', true);
          $('#checkout_address_reusablePackagingEnabled').closest('form').submit();
        } else {
          // TODO
        }
      }
    }
  }
  window.addEventListener('message', onMessage, true);

  $('#modal-loopeat').on('show.bs.modal', function(e) {
    var $target = $(e.relatedTarget);
    if ($target.data('loopeatIframeSrc')) {
      $('#modal-loopeat iframe').attr('src', $target.data('loopeatIframeSrc'));
    }
  });
  $('#modal-loopeat').on('shown.bs.modal', function(e) {
    preventUncheck = false;
  });
  $('#modal-loopeat').on('hidden.bs.modal', function(e) {
    if (!preventUncheck) {
      $('#checkout_address_reusablePackagingEnabled').prop('checked', false);
    }
  });

  $('#checkout_address_reusablePackagingEnabled').on('change', function(e) {
    var isChecked = $(this).is(':checked');
    var isLoopeat = $(this).data('loopeat') === true;
    if (isChecked && isLoopeat) {
      var iframeUrl = $(this).data('loopeatAuthorizeUrl');
      $('#modal-loopeat iframe').attr('src', iframeUrl);
      $('#modal-loopeat').modal('show');
    } else {
      $(this).closest('form').submit();
    }
  });

  new CoopCycle.DeliveryMap('map', {
    pickup: {{ order.restaurant.address|latlng|json_encode() }},
    dropoff: {{ order.shippingAddress|latlng|json_encode() }},
    fitBoundsOptions: {
      paddingBottomRight: [ 350, 0 ]
    }
  });

  new CoopCycle.CheckoutDateTime(document.querySelector('#checkout_address_shippedAt'), {
    dateElement: document.querySelector('#checkout_address_shippedAt_date'),
    timeElement: document.querySelector('#checkout_address_shippedAt_time')
  });

})();
</script>
{% endif %}
{% endblock %}
